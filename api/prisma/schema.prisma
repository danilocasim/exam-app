generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["partialIndexes"]
}

datasource db {
  provider = "postgresql"
}

model ExamType {
  id            String        @id
  name          String
  displayName   String
  description   String?
  domains       Json
  passingScore  Int           @default(70)
  timeLimit     Int           @default(90)
  questionCount Int           @default(65)
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  examAttempts  ExamAttempt[]
  questions     Question[]
  syncVersions  SyncVersion?
}

model Admin {
  id                String     @id @default(uuid())
  email             String     @unique
  passwordHash      String
  name              String
  createdAt         DateTime   @default(now())
  approvedQuestions Question[] @relation("ApprovedBy")
  createdQuestions  Question[] @relation("CreatedBy")
}

model Question {
  id                String         @id @default(uuid())
  examTypeId        String
  text              String
  type              QuestionType
  domain            String
  difficulty        Difficulty
  options           Json
  correctAnswers    String[]
  explanation       String
  status            QuestionStatus @default(DRAFT)
  version           Int            @default(1)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  archivedAt        DateTime?
  approvedAt        DateTime?
  createdById       String?
  approvedById      String?
  explanationBlocks Json?
  approvedBy        Admin?         @relation("ApprovedBy", fields: [approvedById], references: [id])
  createdBy         Admin?         @relation("CreatedBy", fields: [createdById], references: [id])
  examType          ExamType       @relation(fields: [examTypeId], references: [id])

  @@index([examTypeId])
  @@index([domain])
  @@index([status])
  @@index([version])
  @@index([examTypeId, status])
}

model SyncVersion {
  id         Int      @id @default(autoincrement())
  examTypeId String   @unique
  version    Int      @default(1)
  updatedAt  DateTime @updatedAt
  examType   ExamType @relation(fields: [examTypeId], references: [id])
}

model User {
  id           String        @id @default(uuid())
  googleId     String        @unique
  email        String        @unique
  name         String?
  oauthToken   String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  lastLoginAt  DateTime?
  examAttempts ExamAttempt[]
  studyStreak  StudyStreak?
  userStats    UserStats?
}

model ExamAttempt {
  id           String     @id @default(uuid())
  userId       String?
  examTypeId   String
  score        Int
  passed       Boolean
  duration     Int
  submittedAt  DateTime   @default(now())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  syncedAt     DateTime?
  syncRetries  Int        @default(0)
  syncStatus   SyncStatus @default(PENDING)
  localId      String?
  domainScores Json?      // [{domainId, correct, total}] — per-domain breakdown
  answers      Json?      // [{questionId, selectedAnswers, isCorrect, orderIndex}] — per-question answers
  examType     ExamType   @relation(fields: [examTypeId], references: [id])
  user         User?      @relation(fields: [userId], references: [id])

  @@unique([userId, localId], where: raw("((\"userId\" IS NOT NULL) AND (\"localId\" IS NOT NULL))"))
  @@index([userId])
  @@index([examTypeId])
  @@index([syncStatus])
  @@index([localId])
}

model UserStats {
  id               String    @id @default(uuid())
  userId           String    @unique
  totalExams       Int       @default(0)
  totalPractice    Int       @default(0)
  totalQuestions   Int       @default(0)
  totalTimeSpentMs BigInt    @default(0)
  lastActivityAt   DateTime?
  updatedAt        DateTime  @updatedAt
  user             User      @relation(fields: [userId], references: [id])
}

model StudyStreak {
  id                 String   @id @default(uuid())
  userId             String   @unique
  currentStreak      Int      @default(0)
  longestStreak      Int      @default(0)
  lastCompletionDate String?
  examDate           String?
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id])
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  TRUE_FALSE
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum QuestionStatus {
  DRAFT
  PENDING
  APPROVED
  ARCHIVED
}

enum SyncStatus {
  PENDING
  SYNCED
  FAILED
}
